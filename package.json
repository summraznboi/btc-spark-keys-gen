{
  "name": "btc-spark-keys-gen",
  "version": "1.0.1",
  "description": "Bitcoin Spark keys generator with maximum compatibility",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "bitcoin",
    "spark",
    "keys",
    "generator",
    "crypto",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@noble/curves": ">=1.9.1",
    "@scure/bip32": ">=1.7.0",
    "@scure/btc-signer": ">=1.8.1",
    "bech32": "^2.0.0",
    "tiny-secp256k1": "^2.2.0"
  },
  "devDependencies": {
    "@swc/core": "^1.13.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
